# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{md,markdown}]
# Don't trim end spacing because unfortunately Markdown uses that
indent_style = space
trim_trailing_whitespace = false

[*.{bash,zsh,sh}]
indent_style = space
indent_size = 2

[.{zsh*,zlogin}]
indent_style = space
indent_size = 2

[**/{zfunctions,functions}/*]
indent_style = space
indent_size = 2

[**/bin/*]
indent_style = space
indent_size = 2
